    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^2.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@tanstack/react-query": "^5.28.0",
    "@trpc/client": "^11.0.0-rc.261",
    "@trpc/react-query": "^11.0.0-rc.261",
    "@trpc/server": "^11.0.0-rc.261",
    "axios": "^1.6.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "drizzle-orm": "^0.29.1",
    "express": "^4.18.2",
    "framer-motion": "^10.16.4",
    "jsonwebtoken": "^9.1.2",
    "lucide-react": "^0.294.0",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.7",
    "react": "^19.0.0-rc-66ef41ea-20231206",
    "react-dom": "^19.0.0-rc-66ef41ea-20231206",
    "react-hook-form": "^7.48.0",
    "recharts": "^2.10.3",
    "superjson": "^2.2.1",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^4.0.0-alpha.1",
    "wouter": "^2.14.0",
    "zod": "^3.22.4"
