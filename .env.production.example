# Production Environment Variables
# Copy this file to .env.production and fill in the values

# Node Environment
NODE_ENV=production
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://prod_user:SECURE_PASSWORD@prod-db:5432/sites_monitor
DATABASE_NAME=sites_monitor
DATABASE_USER=prod_user
DATABASE_PASSWORD=SECURE_PASSWORD

# Redis
REDIS_URL=redis://:REDIS_PASSWORD@prod-redis:6379
REDIS_PASSWORD=SECURE_REDIS_PASSWORD

# JWT
JWT_SECRET=VERY_SECURE_JWT_SECRET_CHANGE_THIS

# API
VITE_API_URL=https://sites.administradoramutual.com.br
VITE_APP_ID=your_oauth_app_id
VITE_APP_TITLE=Painel de Monitoramento - Administradora Mutual
VITE_APP_LOGO=/logo.svg

# OAuth
OAUTH_SERVER_URL=https://api.manus.im
VITE_OAUTH_PORTAL_URL=https://portal.manus.im

# Email (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@administradoramutual.com.br
SENDGRID_FROM_NAME=Administradora Mutual

# Monitoring
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Grafana
GRAFANA_PASSWORD=SECURE_GRAFANA_PASSWORD

# SSL Certificates
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup
BACKUP_PATH=/backups
BACKUP_RETENTION_DAYS=30

# Monitoring Alerts
ALERT_EMAIL=alessandro@pizzolatto.com
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Performance
MAX_CONNECTIONS=200
CONNECTION_POOL_SIZE=20
CACHE_TTL=3600

# Security
CORS_ORIGIN=https://sites.administradoramutual.com.br
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Features
ENABLE_HEALTH_CHECKS=true
ENABLE_ALERTS=true
ENABLE_EMAIL_NOTIFICATIONS=true
HEALTH_CHECK_INTERVAL=300
ALERT_CHECK_INTERVAL=60
